    </ul>
    <div id="root"></div>
    <h1>How is <%= loc %> feeling today?</h1>
    <h2> The average emotion of articles about this topic is <%= avg %>. </h2>
    <br>
    <h2>Articles:</h2>
    <!-- <div class="container"> -->
    <div class="article-container">
      <% for (var i = 0; i < data.length; i++){ %>
    <div class="dropdown">
      <button class= "dropbtn"><a href=<%= Object.keys(data[i]) %>><%= Object.values(data[i])%>...</a></button>
      <div class="dropdown-content">
          <table>
            <tr>
              <th>Entities</th>
              <th>Sentiment</th>
              <th>Salience</th>
            </tr>
            <% for (var j = 0; j < entities[i].length; j++){ %>
            <tr>
              <td><%= entities[i][j].name %></td>
              <td><%= entities[i][j].score %></td>
              <td><%= entities[i][j].salience %></td>
            </tr>
            <% } %>
          </table>
      </div>
    </div>
      <% } %>
    </div>
    <!-- </div> -->
  </body>
