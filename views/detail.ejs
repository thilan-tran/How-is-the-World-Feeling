  <body>
    <ul>
      <li><a class="nav" href="/0">United States</a></li>
      <li><a class="nav" href="/1">Great Britain</a></li>
      <li><a class="nav" href="/2">India</a></li>
      <li><a class="nav" href="/3">Australia</a></li>
      <li><a class="nav" href="/4">Israel</a></li>
      <li><a class="nav" href="/5">Germany</a></li>
